<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.generation.GenerateMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/generate_menu_generate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_background_red"
            android:fontFamily="@font/dustismo_bold"
            android:text="@string/generate"
            android:textColor="@color/colorBackground"
            android:textSize="25dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintWidth_percent="0.7" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@id/generate_menu_generate" />

        <Button
            android:id="@+id/generate_menu_saved"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button_background_red_dark"
            android:fontFamily="@font/dustismo_bold"
            android:text="@string/saved"
            android:textColor="@color/colorBackground"
            android:textSize="21dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintWidth_percent="0.7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>